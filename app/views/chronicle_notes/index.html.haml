      .modal-body
        %input.bootstrap-wysihtml5-insert-link-url.input-xlarge{:value => "http://"}/
      .modal-footer
        %a.btn{"data-dismiss" => "modal", :href => "#"} Cancel
        %a.btn.btn-primary{"data-dismiss" => "modal", :href => "#"} Insert link
    %a.btn{"data-wysihtml5-command" => "createLink", :href => "javascript:;", :title => "Link", :unselectable => "on"}

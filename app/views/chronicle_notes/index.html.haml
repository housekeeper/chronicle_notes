      .modal-body
        %input.bootstrap-wysihtml5-insert-image-url.input-xlarge{:value => "http://"}/
      .modal-footer
        %a.btn{"data-dismiss" => "modal", :href => "#"} Cancel
        %a.btn.btn-primary{"data-dismiss" => "modal", :href => "#"} Insert image
    %a.btn{"data-wysihtml5-command" => "insertImage", :href => "javascript:;", :title => "Insert image", :unselectable => "on"}
